<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.Priority?>

<AnchorPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.khanghoang.client.presentation.chat.ChatScreenController">

    <VBox spacing="10.0" AnchorPane.topAnchor="0.0" AnchorPane.leftAnchor="0.0"
          AnchorPane.rightAnchor="0.0" AnchorPane.bottomAnchor="0.0">



        <ListView fx:id="chatList" prefHeight="350.0" VBox.vgrow="ALWAYS"/>

        <HBox spacing="10.0">
            <TextField fx:id="messageInput" HBox.hgrow="ALWAYS"/>
            <Button fx:id="sendButton" text="Send" onAction="#sendMessage"/>
        </HBox>
    </VBox>
</AnchorPane>
